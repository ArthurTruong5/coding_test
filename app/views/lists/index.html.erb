<p id="notice"><%= notice %></p>


<section class="hero is-primary">
  <div class="hero-body">
      <p class="subtitle">Company List</p>
  </div>
</section>

<br>

<%= link_to 'New List', new_list_path, :class => 'button is-primary' %>

<%= link_to 'Import CSV', new_list_path, :class => 'button is-primary' %>

<div class="demo">

  <br>
  <table class="table is-responsive is-fullwidth">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Number</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @lists.each do |list| %>
    <tbody>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.date %></td>
        <td><%= list.number %></td>
        <td><%= list.description %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    </tbody>
    <% end %>
  </table>

</div>
